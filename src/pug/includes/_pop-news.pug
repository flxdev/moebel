.container-popup-news(data-news='1')
    .container-wrapper-popup-news
        .brn-close-popup
            img(src='img/btn-close.png')
        .main-wrapper-popup-news
            .content-popup-news
                .popup-news-data 21.02.2017
                h2.popup-news-title from 15 to 24 March we participate in the international exhibition in Cologne
                .content-popup-news_img-txt
                    .content-popup-news_img
                        img(src='img/news/news2.png')
                    .content-popup-news_txt
